<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#E2E8F0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Incident Icon -->
        <ImageView
            android:id="@+id/imgIncidentType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_report"
            app:tint="#2563EB" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Title/Type -->
            <TextView
                android:id="@+id/tvIncidentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flood near Gate A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B" />

            <!-- Date, Time and Reporter -->
            <TextView
                android:id="@+id/tvIncidentDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2025-12-03 14:10 by Ali"
                android:textSize="13sp"
                android:textColor="#64748B" />

        </LinearLayout>

        <!-- Status/Severity Icon or Tag -->
        <TextView
            android:id="@+id/tvSeverity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EF4444"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_rounded_button"
            android:backgroundTint="#FEE2E2" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
